      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./types": {
      "types": "./dist/lib/types/index.d.ts",
      "import": "./dist/lib/types/index.js",
      "require": "./dist/lib/types/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
